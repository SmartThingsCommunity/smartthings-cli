{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"importHelpers": true,
		"module": "node18",
		"lib": ["ES2023", "DOM"],
		"strict": true,
		"target": "ES2023",
		"esModuleInterop": true,
		"noErrorTruncation": true,
		"useUnknownInCatchVariables": false,
		"isolatedModules": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"rootDir": ".",
		"outDir": "./dist"
	},
	"include": [
		"src/**/*",
		"global.d.ts",
		".eslintrc.cjs",
		"jest.config.ts",
		"package.json"
	]
}
