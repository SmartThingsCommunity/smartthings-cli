{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"importHelpers": true,
		"module": "Node16",
		"lib": ["ES2022"],
		"strict": true,
		"target": "ES2022",
		"esModuleInterop": true,
		"noErrorTruncation": true,
		"useUnknownInCatchVariables": false,
		"isolatedModules": true,
		"skipLibCheck": true
	},
	"references": [
		{
			"path": "packages/cli",
			"name": "@smartthings/cli"
		},
		{
			"path": "packages/edge",
			"name": "@smartthings/plugin-cli-edge"
		},
		{
			"path": "packages/lib",
			"name": "@smartthings/cli-lib"
		}
	]
}
