{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"importHelpers": true,
		"module": "commonjs",
		"lib": ["es2020"],
		"strict": true,
		"target": "es2019",
		"esModuleInterop": true,
		"noErrorTruncation": true,
		"useUnknownInCatchVariables": false,
		"isolatedModules": true,
		"skipLibCheck": true
	},
	"references": [
		{
			"path": "packages/cli",
			"name": "@smartthings/cli"
		},
		{
			"path": "packages/lib",
			"name": "@smartthings/cli-lib"
		},
		{
			"path": "packages/testlib",
			"name": "@smartthings/cli-testlib"
		}
	]
}
