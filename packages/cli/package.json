{
	"name": "@smartthings/cli",
	"version": "1.3.1",
	"description": "Command Line Interface for the SmartThings APIs",
	"author": "SmartThings, Inc.",
	"bin": {
		"smartthings": "bin/run"
	},
	"bugs": {
		"url": "https://github.com/SmartThingsCommunity/smartthings-cli/issues"
	},
	"homepage": "https://github.com/SmartThingsCommunity/smartthings-cli",
	"license": "Apache-2.0",
	"main": "lib/index.js",
	"engines": {
		"node": ">=18.15.0 <19",
		"npm": ">=9.5"
	},
	"files": [
		"/bin",
		"/lib",
		"README.md",
		"/npm-shrinkwrap.json",
		"!*/__tests__"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SmartThingsCommunity/smartthings-cli.git"
	},
	"type": "module",
	"pkg": {
		"scripts": [
			"lib/**/*.js"
		],
		"assets": [
			"../../node_modules/yarn"
		],
		"outputPath": "dist_bin",
		"targets": [
			"node18-macos-x64",
			"node18-macos-arm64",
			"node18-linux-x64",
			"node18-linux-arm64",
			"node18-linuxstatic-armv7",
			"node18-win-x64"
		]
	},
	"dependencies": {
		"@aws-sdk/client-lambda": "^3.329.0",
		"@smartthings/cli-lib": "^2.1.0",
		"@smartthings/core-sdk": "^7.1.0",
		"@smartthings/plugin-cli-edge": "^3.1.1",
		"inquirer": "^8.2.4",
		"js-yaml": "^4.1.0",
		"log4js": "^6.6.0",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@types/inquirer": "^8.2.1",
		"@types/jest": "^29.5.1",
		"@types/js-yaml": "^4.0.5",
		"@types/node": "^18.15.11",
		"@types/uuid": "^9.0.1",
		"@typescript-eslint/eslint-plugin": "^5.59.7",
		"@typescript-eslint/parser": "^5.59.7",
		"archiver": "^5.3.1",
		"eslint": "^8.41.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jest": "^27.2.1",
		"jest": "^29.5.0",
		"jest-extended": "^3.2.4",
		"jest-html-reporters": "^3.1.4",
		"pkg": "^5.8.0",
		"rimraf": "^3.0.2",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.1",
		"typescript": "^4.8.3"
	},
	"scripts": {
		"lint": "eslint --ext ts src",
		"format": "eslint --ext ts src --fix",
		"clean": "rimraf lib && rimraf tsconfig.tsbuildinfo",
		"full-clean": "rimraf node_modules && rimraf dist_bin && rimraf coverage && rimraf jest*html*reporters* && npm run clean",
		"compile": "tsc -b",
		"readme": "echo TODO:readme",
		"watch": "tsc -b -w",
		"build": "npm run clean && npm run compile",
		"test": "jest",
		"test-watch": "jest --watch --reporters=default",
		"test-coverage": "jest --coverage=true",
		"prepack": "tsc -b && echo TODO:readme",
		"version": "echo TODO:readme && git add README.md",
		"package": "pkg package.json && npm run zip-binaries",
		"zip-binaries": "node zip-binaries.mjs"
	},
	"directories": {
		"doc": "doc"
	}
}
