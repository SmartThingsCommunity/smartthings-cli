{
	"name": "@smartthings/cli-testlib",
	"version": "1.0.0-beta.1",
	"description": "SmartThings unified CLI testing utility methods library",
	"author": "SmartThings, Inc.",
	"bugs": {
		"url": "https://github.com/SmartThingsCommunity/smartthings-cli/issues"
	},
	"homepage": "https://github.com/SmartThingsCommunity/smartthings-cli",
	"license": "Apache-2.0",
	"main": "dist/index",
	"types": "dist/index",
	"engines": {
		"node": ">=12.18.1 <17",
		"npm": ">=8"
	},
	"files": [
		"dist",
		"README.md",
		"!*/__tests__"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SmartThingsCommunity/smartthings-cli.git",
		"directory": "packages/testlib"
	},
	"dependencies": {
		"@smartthings/cli-lib": "^1.0.0-beta.1"
	},
	"devDependencies": {
		"@types/jest": "^27.4.1",
		"@types/js-yaml": "^4.0.5",
		"@types/node": "^16.11.24",
		"@typescript-eslint/eslint-plugin": "^5.17.0",
		"@typescript-eslint/parser": "^5.17.0",
		"eslint": "^8.12.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-jest": "^26.1.3",
		"jest": "^27.5.1",
		"jest-extended": "^0.11.5",
		"rimraf": "^3.0.2",
		"ts-jest": "^27.1.4",
		"ts-node": "^10.5.0",
		"typescript": "^4.5.4"
	},
	"scripts": {
		"lint": "eslint --ext ts src",
		"format": "eslint --ext ts src --fix",
		"clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
		"full-clean": "rimraf node_modules && rimraf coverage && npm run clean",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"build": "npm run clean && npm run compile",
		"test": "jest",
		"test-watch": "jest --watch",
		"test-coverage": "jest --coverage=true"
	}
}
