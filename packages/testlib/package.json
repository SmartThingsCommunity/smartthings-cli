{
	"name": "@smartthings/cli-testlib",
	"version": "1.1.0",
	"description": "SmartThings CLI testing utility methods library",
	"author": "SmartThings, Inc.",
	"bugs": {
		"url": "https://github.com/SmartThingsCommunity/smartthings-cli/issues"
	},
	"homepage": "https://github.com/SmartThingsCommunity/smartthings-cli",
	"license": "Apache-2.0",
	"main": "dist/index",
	"types": "dist/index",
	"engines": {
		"node": ">=16.14.2 <17",
		"npm": ">=8"
	},
	"files": [
		"dist",
		"README.md",
		"!*/__tests__"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SmartThingsCommunity/smartthings-cli.git",
		"directory": "packages/testlib"
	},
	"dependencies": {
		"@smartthings/cli-lib": "^1.1.0",
		"@smartthings/core-sdk": "^5.2.0"
	},
	"devDependencies": {
		"@types/jest": "^28.1.5",
		"@types/js-yaml": "^4.0.5",
		"@types/node": "^16.11.44",
		"@typescript-eslint/eslint-plugin": "^5.30.6",
		"@typescript-eslint/parser": "^5.30.6",
		"eslint": "^8.19.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jest": "^26.6.0",
		"jest": "^28.1.3",
		"jest-extended": "^0.11.5",
		"jest-html-reporters": "^3.0.11",
		"rimraf": "^3.0.2",
		"ts-jest": "^28.0.6",
		"ts-node": "^10.9.1",
		"typescript": "^4.8.3"
	},
	"scripts": {
		"lint": "eslint --ext ts src",
		"format": "eslint --ext ts src --fix",
		"clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
		"full-clean": "rimraf node_modules && rimraf coverage && rimraf jest*html* && npm run clean",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"build": "npm run clean && npm run compile",
		"test": "jest",
		"test-watch": "jest --watch --reporters=default",
		"test-coverage": "jest --coverage=true"
	}
}
